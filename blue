#service
---
apiVersion: v1
kind: Service
metadata:
  name: ktcloud-svc
spec:
  selector:
    color: green
  ports:
    - port: 80
      targetPort: 80
  type: LoadBalancer

#deployment : blue
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ktcloud-blue
spec:
  selector:
    matchLabels:
      color: blue
  template:
    metadata:
      labels:
        color: blue
    spec:
      containers:
        - name: ktcloudctn-blue
          image: eunjun0122/ktcloudinfra:blue
          resources:
            limits: # limit(최대)/requests(최소보장)
              memory: "128Mi"
              cpu: "500m" #1000m이 1개 cpu
          ports:
            - containerPort: 80   # nginx 포트 번호


# deployment : green
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ktcloud-green
spec:
  selector:
    matchLabels:
      color: green
  template:
    metadata:
      labels:
        color: green
    spec:
      containers:
        - name: ktcloudctn-green
          image: eunjun0122/ktcloudinfra:green
          resources:
            limits: # limit(최대)/requests(최소보장)
              memory: "128Mi"
              cpu: "500m" #1000m이 1개 cpu
          ports:
            - containerPort: 80   # nginx 포트 번호


